          <% } else { %>
          <a class="dropdown-item" href="/oidc/auth?client_id=Xkv3aRBNyjq06XuhYYxpO8g9UGn&response_type=code&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fportalclient">Login</a>
          <% } %>
        </div>
      </ul>
      </nav>
    </div>
  </nav>

  

  <div class="container" >



<div class="row">
<% clients.forEach(c => { %>
  
  <div class="col-md-6 col-lg-4 col-12">
  <img class="card-img-top" src="/logo_client/<%= c.logo_app %>" alt="Card image cap">
  <div class="card mb-4">
    <h5 class="card-title"><%= c.nama_client %></h5>
    <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
    <a href="<%= c.redirect_uri %>" class="btn btn-primary">Login</a>
  </div>
  </div>
  <% }) %>
  </div>
  </div>
  </div>
  
