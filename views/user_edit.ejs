<%- include('snippets/head') %>
<head>
  <title>EDIT DATA USER</title>
</head>
<% pesan.forEach(p => { %>
  <div class="alert alert-danger d-flex align-items-center justify-content-center" role="alert">

    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </symbol>
    </svg>
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
    <div>
      <%= p %>
    </div>
  </div>
  <% }) %>
  
<body class="hold-transition register-page">
    <div class="register-box">
      <div class="register-logo">
        <a href="#"><b>Edit</b>User</a>
      </div>
    
      <div class="card">
        <div class="card-body register-card-body">
          <p class="login-box-msg">Edit Data User</p>
    
          <form action="" method="post">
            <div class="input-group mb-3">
              <input type="text" class="form-control" value="<%= user.nama %>" placeholder="Full name" name="nama" required>
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input type="email" class="form-control" value="<%= user.email %>" placeholder="Email" name="email" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" required>
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
 
              <!-- /.col -->
              <div class="col-12" >
                <button type="submit" class="btn btn-primary btn-block">Update</button>
              </div>
              <!-- /.col -->
            </div>
          </form>
    
    </body>

  <%- include('snippets/foot') %>